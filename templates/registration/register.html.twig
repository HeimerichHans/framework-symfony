{% extends 'base.html.twig' %}

{% block title %}Création compte{% endblock %}

{% block body %}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8" data-aos="fade-up" data-aos-delay="150">
                    <form method="post">
                        <div class="post-entry text-center">
                            <h1 class="h1 mb-4 font-weight-normal">Créez un compte</h1>
                            <p>Bénéficiez d’une expérience inégalée avec du contenu en lien avec vos centres d’intérêt qu'est la moto sur notre service.</p>                    
                        </div> 
                        {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.password.first, {
                                label: 'Mot de passe'
                            }) }}
                            {{ form_row(registrationForm.password.second, {
                                label: 'Confirmer mot de passe'
                            }) }}
                            {{ form_row(registrationForm.nom) }}
                            {{ form_row(registrationForm.prenom) }}
                            {{ form_row(registrationForm.pseudo) }}
                            {{ form_row(registrationForm.agreeTerms, {
                                label: 'Veuillez agréer aux termes utilisateurs'
                            }) }}

                            <button type="submit" class="btn">Register</button>
                        {{ form_end(registrationForm) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
