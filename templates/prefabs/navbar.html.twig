                                        <li class="has-children">
                                            <a>Catégories</a>
                                            <ul class="dropdown">
                                                {% for i in 1..3 %}
                                                    <li><a href="">{{ i }}</a></li>                                              
                                                {% endfor %}
                                            </ul>
                                        </li>                                       
                                        {% if app.user %}                                                                                                                        
                                            <li><a href="{{ path('profil',{id: app.user.id}) }} ">Profil</a></li>                                            
